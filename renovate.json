{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "kubernetes": {
    "fileMatch": ["kustomization\\.yaml$"],
    "enabled": true
  },
  "helmfile": {
    "fileMatch": ["helmfile\\.yaml$"],
    "enabled": true
  },
  "helm-values": {
    "fileMatch": ["helm-release.*\\.yaml$"],
    "enabled": true
  },
  "helm-requirements": {
    "fileMatch": ["helm-release.*\\.yaml$"],
    "enabled": true
  }
}
